<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <h2>Zapomniałeś hasła?</h2>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "Twój email", :class => "form-control"  %>

  <%= f.submit "Wyślij instrukcje ustawiania nowego hasła", :class => "btn btn-lg btn-primary btn-block"  %>
<% end %>

<%= render "devise/shared/links" %>
