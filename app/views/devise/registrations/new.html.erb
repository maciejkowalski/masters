<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <h2>Rejestracja</h2>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "form-control" %>
  <%= f.password_field :password, :placeholder => "Hasło", :class => "form-control" %>
  <%= f.password_field :password_confirmation, :placeholder => "Powtórz hasło", :class => "form-control" %>

  <%= f.submit "Zarejestruj", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
