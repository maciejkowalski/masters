<h1>Masters</h1>

<div ng-controller="MainCtrl">
  <h3>Add new list</h3>
  <form ng-submit='addList()'>
    <input type='text' ng-model="newList.name">
    <input type='submit' value='Add'>
  </form>

  <hr/>

  <div class="row">
    <div class="col-md-4" ng-repeat="list in lists">
      <h3 ng-click="clickList()">{{list.name}}</h3>
      <button class='btn btn-danger btn-small pull-right' ng-click='deleteList($index)'>×</button>

      <form ng-submit='updateList(list)'>
        <input type='text' ng-model="list.name">
        <input type='submit' value='Update'>
      </form>

      <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>

      <div class="col-md-8" ng-repeat="task in list.tasks">
        {{task.name}}
        <button class='btn btn-danger btn-small pull-right' ng-click='deleteTaskFromList($index, task, list)'>×</button>
        <br />

        <form ng-submit='updateTaskInList(task)'>
          <input type='text' ng-model="task.name">
          <input type='submit' value='Update'>
        </form>

      </div>

      <form ng-submit='addTaskToList(newTask, list)'>
        <input type='text' ng-model="newTask.name">
        <input type='submit' value='Add'>
      </form>
    </div>
  </div>

</div>
